      <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to image_tag("logo.png"), root_path %>

        </div>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
           <li class="round-image">
            <%= link_to (image_tag current_user.thumbnail.url(:thumb)), edit_user_registration_path, class: "img" %>    
          </li>

            <li>

                <%= link_to "New Task", new_tracker_path %> 
                
            </li>
            <li>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "Sign_Up", new_user_registration_path, class: "glyphicon glyphicon-user" %>
            </li>
            <li>
              <%= link_to "Sign_In", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>

  <div class="container">
    <div class="flash">
      <% flash.each do |name, msg| %>
        <%= content_tag :section, msg,  class: "alert alert-info" %>
      <% end %>
    </div>
  </div>
  <%= yield %>
   
   <script>
       $(document).ready(function(){
         setTimeout(function(){
         $('.flash').fadeOut("slow", function() {
          $(this).remove();
         });
        }, 3000);
      })
  </script>    
  </body>
</html>